            <div class="row">      

                 

                <div class="seccion-noticias col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <div class="row">
                                <div class="not-date col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                    <div class="not-sec-ppal">{{noticia.nombreSeccion}}</div>
                                   {{noticia.ts_update}} 
                                   <div class="not-autor">
                                       <strong>Autor :</strong> {{noticia.nombreAutor}} {{noticia.apellidoAutor}}
                                   </div>
                                </div>  
                                <div class="not-tit col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" id="titular">
                                   {{noticia.titular}}
                                </div>   

                                <div class="not-bajada col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                   {{noticia.bajada}}
                                </div>   

                                <div class="not-img-ppal col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                   <img src="/images/{{noticia.imagen}}" alt="" >
                                </div> 
                                <div class="img-epi col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                       {{noticia.epigrafe}}
                                </div>  

                                <div class="not-cuerpo col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" id="qpaso">
                                   {{noticia.cuerpo}}
                                </div> 

                                 {{#if imagenes}}
                                    <div class="img-not col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" id="imagenes">
                                        <div id="carouselExampleCaptions" class="carousel slide " data-bs-ride="carousel" >
                                        <div class="carousel-inner " >
                                            <div class="carousel-item  active ">   
                                                <div class="not-img-muestra col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                                    <img src="/images/{{noticia.imagen}}" alt="" >
                                                </div> 
                                                <div class="img-epi col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                                    {{noticia.epigrafe}}
                                                </div>  
                                            </div>  
                                            {{#each imagenes}}
                                            <div class="carousel-item  ">   
                                                <div class="not-img-muestra col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                                    <img src="/images/{{nombre}}" alt="" >
                                                </div> 
                                                <div class="img-epi col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                                    {{epigrafe}}
                                                </div>  
                                            </div>  
                                            {{/each}}                 
                                        </div>
                                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                        </div>
                                    </div>
                                 {{/if}}
                                <div class="comentarios-sec-tit col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-4 mb-2 " id="comentarios">
                                    #Comentarios
                                </div>
                                 <div class="not-comentarios col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" id="">
